<Page
    x:Class="Selectivitapp.Assets.Viewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Selectivitapp.Assets"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Height="50"
            Margin="10,0,10,0"
            HorizontalAlignment="Stretch"
            ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="248" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock
                Name="PDFTitle"
                Margin="0"
                VerticalAlignment="Center" />
            <ComboBox
                Name="Answers"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SelectedIndex="0"
                SelectionChanged="Answers_SelectionChanged">
                <x:String>Enunciats</x:String>
                <x:String>Solucions</x:String>
                <x:String>Pantalla dividida</x:String>
            </ComboBox>
            <ComboBox
                x:Name="MonthSelector"
                Grid.Column="2"
                Width="120"
                VerticalAlignment="Center"
                SelectedIndex="0"
                SelectionChanged="MonthSelector_SelectionChanged">
                <x:String>Juny</x:String>
                <x:String>Setembre</x:String>
            </ComboBox>
            <NumberBox
                Name="YearSelector"
                Grid.Column="3"
                Width="120"
                VerticalAlignment="Center"
                LargeChange="1"
                Maximum="2024"
                Minimum="2000"
                SmallChange="1"
                SpinButtonPlacementMode="Compact"
                ValueChanged="YearSelector_ValueChanged"
                Value="2024" />
        </Grid>
        <winui:ProgressBar
            Name="pgsBar"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="8"
            VerticalAlignment="Bottom"
            CornerRadius="0,0,0,0"
            IsIndeterminate="True"
            Visibility="Visible" />
        <Grid
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ColumnEnunciats" Width="1*" />
                <ColumnDefinition x:Name="ColumnSolucions" Width="1*" />
            </Grid.ColumnDefinitions>
            <Border
                Name="LeftBorder"
                Grid.Column="0"
                Margin="10,0,10,10"
                CornerRadius="8,8,8,8">
                <winui:WebView2
                    Name="ViewEnunciats"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="https://www.selecat.cat/pau/pau_llca21jl.pdf" />
            </Border>
            <Border
                Name="RightBorder"
                Grid.Column="1"
                Margin="10,0,10,10"
                CornerRadius="8,8,8,8">
                <winui:WebView2
                    Name="ViewSolucions"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="https://www.selecat.cat/pau/pau_llca21jp.pdf" />
            </Border>
        </Grid>
    </Grid>
</Page>
